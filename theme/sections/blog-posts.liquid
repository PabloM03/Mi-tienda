{% comment %}Blog listing section{% endcomment %}
<section class="blog">
  <h1>{{ blog.title }}</h1>
  {% for article in blog.articles %}
    <article>
      <h2><a href="{{ article.url }}">{{ article.title }}</a></h2>
      <div class="rte">{{ article.excerpt }}</div>
    </article>
  {% endfor %}
</section>

{% schema %}
{
  "name": "Blog posts"
}
{% endschema %}
