/* Placeholder CSS for the Shopify theme */
.site-header, .site-footer {
  padding: 20px;
}
.main-nav ul {
  list-style: none;
  display: flex;
  gap: 10px;
}
.hero {
  padding: 60px 20px;
  text-align: center;
  background-size: cover;
  color: #fff;
}
.featured-collection .product-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20px;
}
.product-item {
  width: calc(25% - 20px);
  text-align: center;
}
form input {
  display: block;
  margin: 10px 0;
  padding: 8px;
}
form button {
  padding: 10px 20px;
}

.header-inner {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.primary-nav ul {
  list-style: none;
  display: flex;
  gap: 15px;
  position: relative;
}
.primary-nav li { position: relative; }
.primary-nav li ul {
  display: none;
  position: absolute;
  top: 100%;
  left: 0;
  background: #fff;
  padding: 10px;
  list-style: none;
  z-index: 10;
}
.primary-nav li:hover ul {
  display: block;
}
.secondary-nav a {
  margin-left: 10px;
}
.product {
  display: flex;
  gap: 20px;
}
.product-images {
  flex: 1;
}
.product-images img {
  width: 100%;
  max-width: 300px;
}
.product-details {
  flex: 1;
  max-width: 400px;
}
.article-list {
  list-style: none;
  padding: 0;
}
.article-item {
  margin-bottom: 40px;
}
.article-item img {
  width: 100%;
  height: auto;
}

